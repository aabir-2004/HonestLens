# HonestLens Enhanced Configuration
# Copy this to .env and fill in your API keys

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_PATH=./data/honestlens.db

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# API Keys for Enhanced ML and Fact-Checking Services

# News API (for news article verification)
# Get your key from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# Google Cloud APIs
# Get your keys from: https://console.cloud.google.com/
GOOGLE_FACT_CHECK_API_KEY=your_google_fact_check_api_key_here
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here

# OpenAI API (for advanced content analysis)
# Get your key from: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# TinEye API (for reverse image search)
# Get your key from: https://tineye.com/
TINEYE_API_KEY=your_tineye_api_key_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/honestlens.log

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Cache Configuration (for API responses)
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# External Services Configuration
PIB_RSS_URL=https://pib.gov.in/RssMain.aspx?ModId=6&Lang=1
MYGOV_API_URL=https://www.mygov.in/covid-19
BOOMLIVE_RSS_URL=https://www.boomlive.in/feed
ALTNEWS_RSS_URL=https://www.altnews.in/feed/
FACTCHECKER_RSS_URL=https://www.factchecker.in/feed/

# ML Service Configuration
ML_SERVICE_TIMEOUT=30000
ML_CONFIDENCE_THRESHOLD=70
IMAGE_PROCESSING_TIMEOUT=60000

# Fact-Check Sources Configuration
FACT_CHECK_SOURCES_UPDATE_INTERVAL=86400000
TRUSTED_DOMAINS=pib.gov.in,mygov.in,timesofindia.com,thehindu.com,indianexpress.com,ndtv.com,bbc.com,reuters.com,apnews.com

# Performance Configuration
MAX_CONCURRENT_VERIFICATIONS=5
VERIFICATION_TIMEOUT=120000
